<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"  
    android:focusableInTouchMode="true" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="屏幕几何体" />

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="球体" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="幕布" />
            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剧院" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    " />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="纹理坐标映射方式" />

            <RadioButton
                android:id="@+id/radio10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="全屏" />

            <RadioButton
                android:id="@+id/radio11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左右" />

            <RadioButton
                android:id="@+id/radio12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上下" />

            <RadioButton
                android:id="@+id/radio13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左半部分" />

            <RadioButton
                android:id="@+id/radio14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上半部分" />

            <RadioButton
                android:id="@+id/radio15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vrporn" />
        </RadioGroup>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/radioGroup_renderMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_renderMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RenderMode" />

            <RadioButton
                android:id="@+id/radio_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="normal" />

            <RadioButton
                android:id="@+id/radio_frontBuffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="frontBuffer" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    " />

        <RadioGroup
            android:id="@+id/radioGroup_showFPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView_showFPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ShowFPS" />

            <RadioButton
                android:id="@+id/radio_showFPS_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="no" />

            <RadioButton
                android:id="@+id/radio_showFPS_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yes" />

        </RadioGroup>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
                android:id="@+id/textView_CustomParam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义透镜参数" />
        
        <TextView
                android:id="@+id/textView_LensSpe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="透镜间距(毫米, 为0采用默认值)"/>

        <EditText
	        android:id="@+id/editText_LensSpe"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:digits="1234567890"
			android:singleLine="true" 
	        android:text="0"/>
        
        <TextView
                android:id="@+id/textView_Fov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="视场角(度, 为0采用默认值)"/>

        <EditText
	        android:id="@+id/editText_Fov"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:digits="1234567890"
			android:singleLine="true" 
	        android:text="0"/>
        
    </LinearLayout>
    
    <Button
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play!" />

</LinearLayout>